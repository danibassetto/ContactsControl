@model ContactModel
@{
    ViewData["Title"] = "Editar Contato";
}

<body>
    <div class="text-center">
        <h1 class="display-4">Editar Contato</h1>
    </div>

    <input type="hidden" asp-for="Id" />
    <form asp-controller="Contact" asp-action="Update" method="post">
        <div class="form-group mb-3">
            <label for="name">Nome</label> @Html.ValidationMessageFor(x => x.Name)
            <input type="text" asp-for="Name" class="form-control" placeholder="Informe o nome do contato">
        </div>
        <div class="form-group mb-3">
            <label for="email">E-mail</label> @Html.ValidationMessageFor(x => x.Email)
            <input type="email" asp-for="Email" class="form-control" placeholder="Informe o e-mail">
        </div>
        <div class="form-group mb-3">
            <label for="phone">Telefone</label> @Html.ValidationMessageFor(x => x.Phone)
            <input type="tel" asp-for="Phone" class="form-control" placeholder="Informe o telefone">
        </div>

        <button type="submit" class="btn btn-primary d-block w-100 mb-3">Alterar</button>
        <a class="btn btn-danger d-block w-100 mb-3" role="button" asp-controller="Contact" asp-action="Index">Cancelar</a>
    </form>
</body>