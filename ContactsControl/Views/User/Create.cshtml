@using ContactsControl.Enums;
@model UserModel
@{
    ViewData["Title"] = "Criar usuário";
}

<body>
    <div class="text-center">
        <h1 class="display-4">Cadastrar Usuário</h1>
    </div>

    <form asp-controller="User" asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="name">Nome</label> @Html.ValidationMessageFor(x => x.Name)
            <input type="text" asp-for="Name" class="form-control" placeholder="Informe o nome do usuário">
        </div>
        <div class="form-group mb-3">
            <label for="login">Login</label> @Html.ValidationMessageFor(x => x.Login)
            <input type="text" asp-for="Login" class="form-control" placeholder="Informe o login">
        </div>
        <div class="form-group mb-3">
            <label for="password">Senha</label> @Html.ValidationMessageFor(x => x.Password)
            <input type="password" asp-for="Password" class="form-control" placeholder="Informe a senha">
        </div>
        <div class="form-group mb-3">
            <label for="profile">Tipo de usuário</label>
            <select asp-for="Profile" class="form-control">
                <option value="0">Selecione</option>
                <option value="@TypeUser.Admin">Administrador</option>
                <option value="@TypeUser.Default">Padrão</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="email">E-mail</label> @Html.ValidationMessageFor(x => x.Email)
            <input type="email" asp-for="Email" class="form-control" placeholder="Informe o e-mail">
        </div>
        

        <button type="submit" class="btn btn-primary d-block w-100 mb-3">Adicionar</button>
        <a class="btn btn-danger d-block w-100 mb-3" role="button" asp-controller="Contact" asp-action="Index">Cancelar</a>
    </form>
</body>